@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section head{
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Hệ thống cửa hàng thuốc số 1, uy tín, chất lượng">
        <meta name="auther" content="A Plus Team">
        <link rel="shortcut icon" href="/Content/Images/icon.png">
        <title>Nhà Thuốc số một-Medicine shop</title>
        <link rel="stylesheet" href="/Content/css/bootstrap.css">
        <link rel="stylesheet" href="/Content/css/home.css">
        <link rel="stylesheet" href="/Content/css/login.css">
        <script src="/Content/js/jquery-3.3.1.js"></script>
        <script src="/Content/js/bootstrap.js"></script>
    </head>
}


<div>
    <div class="login-page">
        @if (TempData["LoginKH"] != null)
        {
            <div class="alert alert-danger" id="notification-error">@TempData["Login"]</div>
        }
        <div class="form">
            <form class="register-form" method="post">
                <input type="text" placeholder="Số điện thoại" name="SDT" />
                <input type="text" placeholder="Tên" name="Ten" />
                <input type="email" placeholder="Email" name="Email" />
                <input type="password" placeholder="Mật khẩu" name="MatKhau" />
                <button type="submit">Đăng Ký</button>
                <p class="message">Bạn đã có Tài Khoản <a href="#">Đăng Nhập</a></p>
            </form>
            <form class="login-form" method="post">
                <input type="number" placeholder="Số điện thoại" name="SDT" />
                <input type="password" placeholder="Mật khẩu" name="MatKhau" />
                <button type="submit">Đăng Nhập</button>
                <p class="message">Bạn chưa có Tài Khoản?  <a href="#" onclick="delElement();">Tạo Tài Khoản</a></p>
            </form>
        </div>
    </div>
</div>

@section script{
    <script>
        $('.message a').click(function () {
            $('.login-page form').animate({ height: "toggle", opacity: "toggle" }, "slow");
        });

        function delElement() {
            document.getElementById('notification-error').remove();
        }
    </script>


}