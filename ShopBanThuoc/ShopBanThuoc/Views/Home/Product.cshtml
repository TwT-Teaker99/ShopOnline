
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using ShopBanThuoc.Models
@model THUOC

@section head{
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Hệ thống cửa hàng thuốc số 1, uy tín, chất lượng">
        <meta name="auther" content="A Plus Team">
        <link rel="shortcut icon" href="/Content/Images/icon.png">
        <title>Nhà Thuốc số một-Medicine shop</title>
        <link rel="stylesheet" href="/Content/css/bootstrap.css">
        <link rel="stylesheet" href="/Content/css/home.css">
        <script src="/Content/js/jquery-3.3.1.js"></script>
        <script src="/Content/js/bootstrap.js"></script>
        <link rel="stylesheet" href="/Content/css/product.css">
        <script src="~/Content/js/Home.js"></script>
    </head>
}


<div id="body">
    <div class="container">
        <!-- Thanh điều hướng -->
        @{ Html.RenderAction("_Navbar");}
        <!-- Kết thúc thanh điều hướng-->
        <div style="display:flex" ;>
            <div class="row" style="width: -webkit-fill-available;">
                <div id="main" class="col-md-12 col-sm-12">
                    <!-- Bắt đầu SlideShow -->
                    <div id="slide" class="carousel slide" data-ride="carousel">

                        <ul class="carousel-indicators">
                            <li data-target="#slide" data-slide-to="0" class="active"></li>
                            <li data-target="#slide" data-slide-to="1"></li>
                            <li data-target="#slide" data-slide-to="2"></li>
                            <li data-target="#slide" data-slide-to="3"></li>
                            <li data-target="#slide" data-slide-to="4"></li>
                        </ul>

                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="img_slide" src="/Content/Images/banner-web-02.jpg" alt="Công Nghệ Web">
                            </div>
                            <div class="carousel-item">
                                <img class="img_slide" src="/Content/Images/banner-web-03.jpg" alt="Công Nghệ Web">
                            </div>
                            <div class="carousel-item">
                                <img class="img_slide" src="/Content/Images/banner-web-04.jpg" alt="Công Nghệ Web">
                            </div>
                            <div class="carousel-item">
                                <img class="img_slide" src="/Content/Images/banner-web-05.jpg" alt="Công Nghệ Web">
                            </div>
                            <div class="carousel-item">
                                <img class="img_slide" src="/Content/Images/banner-web-06.jpg" alt="Công Nghệ Web">
                            </div>
                            <!-- Nút điều khiển slides -->
                            <a class="carousel-control-prev" href="#slide" data-slide="prev">
                                <span class="carousel-control-prev-icon"></span>
                            </a>
                            <a class="carousel-control-next" href="#slide" data-slide="next">
                                <span class="carousel-control-next-icon"></span>
                            </a>

                        </div>
                    </div>
                    <!-- Kết thúc SlideShow -->
                    <!------------------------------------------------------------------------------------->
                    <!-- -->
                    <!-- Bắt đầu hiển thị thông tin sản phẩm -->
                    <div id="product">
                        <!-- Tên sản phẩm, giá.... -->
                        <div id="product-top" class="row">
                            <div id="product-img" class="col-lg-6 col-md-6 col-sm-12">
                                <img src="/Content/Images/@Model.URLAnh">
                            </div>
                            <div id="product-details" class="col-lg-6 col-md-6 col-sm-12">
                                <h1>@Model.TenThuoc</h1>
                                <ul>
                                    <li><span>Dạng thuốc: </span>@Model.DangThuoc</li>
                                    <li><span>Đơn vị: </span>@Model.DonVi</li>
                                    <li id="price">Giá Bán</li>
                                    <li id="price-number">@Model.DonGia VNĐ</li>
                                    <li id="status">Còn hàng</li>
                                </ul>
                                <!-- Thêm vào giỏ -->
                                <div id="add-cart">
                                    @if (Model.SoLuongTon > 0)
                                    {
                                        <a href="/Cart/AddItem/@Model.MaThuoc">Mua ngay</a>
                                    }
                                    else
                                    {
                                        <a href="">Hết Hàng</a>
                                    }

                                </div>
                            </div>
                        </div>
                        <!-- Giới thiệu về sản phẩm -->
                        <div id="product-bottom" class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <h3>Giới thiệu sản phẩm</h3>
                                <p>
                                    <h5>Công dụng: @Model.CongDung</h5>

                                    <h5>Liều lượng sử dụng: @Model.LieuLuong</h5>

                                    <h5>Thành phần thuốc: @Model.ThanhPhan</h5>

                                </p>
                            </div>
                        </div>

                    </div>
                    <!--<div class="breadcrumbs">
        <a href="/Home/Index"><i class="fa fa-home"></i></a>

    </div>
    <div id="product">-->
                    <!-- Tên sản phẩm, giá.... -->
                    <!--<div id="product-top" class="row">

    </div>-->
                    <!-- Giới thiệu về sản phẩm -->
                    <!--<div id="product-bottom" class="row">
        </div>
        <script>loadThuoc1('@ViewBag.maThuoc')</script>
    </div>-->
                    <!-- Kết thúc thông tin sản phẩm-->
                    <!------------------------------------------------------------------------------------->
                </div>
            </div>
            <!-- Banner quảng cáo bên phải -->
            <div id="sidebar" class="col-lg-4 col-md-12 col-sm-12">
                <div id="banner">
                    <div class="banner-item">
                        <a href="#"><img class="img-fluid img_slide" src="/Content/Images/qc_2.png"></a>
                    </div>
                    <div class="banner-item">
                        <a href="#"><img class="img-fluid img_slide" src="/Content/Images/qc_3.png"></a>
                    </div>

                </div>
            </div>
            <!-- Kết thúc banner quảng cáo-->
        </div>
        
    </div>


</div>