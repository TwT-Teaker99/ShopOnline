
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section head{
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Hệ thống cửa hàng thuốc số 1, uy tín, chất lượng">
        <meta name="auther" content="A Plus Team">
        <link rel="shortcut icon" href="/Content/Images/icon.png">
        <title>Nhà Thuốc số một-Medicine shop</title>
        <link rel="stylesheet" href="/Content/css/bootstrap.css">
        <link rel="stylesheet" href="/Content/css/home.css">
        <link rel="stylesheet" href="/Content/css/login.css">
        <script src="/Content/js/jquery-3.3.1.js"></script>
        <script src="/Content/js/bootstrap.js"></script>
    </head>
}


<div>
    <div class="login-page">
        <div class="form">
            <form class="register-form">
                <input type="text" placeholder="name" />
                <input type="password" placeholder="password" />
                <input type="text" placeholder="email address" />
                <button>Đăng Ký</button>
                <p class="message">Bạn đã có Tài Khoản <a href="#">Đăng Nhập</a></p>
            </form>
            <form class="login-form">
                <input type="text" placeholder="username" />
                <input type="password" placeholder="password" />
                <button>Đăng Nhập</button>
                <p class="message">Bạn chưa có Tài Khoản?  <a href="#">Tạo Tài Khoản</a></p>
            </form>
        </div>
    </div>
</div>

@section script{
    <script>
        $('.message a').click(function () {
            $('.login-page form').animate({ height: "toggle", opacity: "toggle" }, "slow");
        });
    </script>
}