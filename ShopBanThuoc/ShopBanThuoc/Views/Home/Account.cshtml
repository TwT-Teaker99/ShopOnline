
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section head{
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="Hệ thống cửa hàng thuốc số 1, uy tín, chất lượng">
        <meta name="auther" content="A Plus Team">
        <link rel="shortcut icon" href="/Content/Images/icon.png">
        <title>Nhà Thuốc số một-Medicine shop</title>
        <link rel="stylesheet" href="/Content/css/bootstrap.css">
        <link rel="stylesheet" href="/Content/css/home.css">
        <link rel="stylesheet" href="/Content/css/account.css">
        <script src="/Content/js/jquery-3.3.1.js"></script>
        <script src="/Content/js/bootstrap.js"></script>
    </head>
}


<div id="body">
    <div class="container">
        <!-- Thanh điều hướng -->
        @{ Html.RenderAction("_Navbar");}
        <div id="main" class="row" style="padding-left: 15px; padding-right:15px;">
            <div class="col-lg-3 col-md-12" style="background-color: #02a55a; padding-top: 15px; border-radius: 3px;padding-bottom: 15px;">
                <div class="info">
                    <img src="Images/icon_login.png">
                    <span class="mt-3">Nguyễn Hoàng Long</span>
                </div>
                <div>
                    <ul id="nav-account-item" class="nav flex-column nav-tabs" role="tablist">
                        <li class="nav-item" style="width: 100%;font-weight: bold;">
                            <a class="nav-link active" data-toggle="tab" href="#TTTK" style="color: white;">Thông tin tài khoản</a>
                        </li>
                        <li class="nav-item" style="width: 100%;font-weight: bold;">
                            <a class="nav-link" data-toggle="tab" href="#QLDH" style="color: white;">Quản lý đơn hàng</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-9 col-md-12 col-sm-12" style="background-color: #FFFFFF; border-radius: 3px; padding: 10px;">
                <div class="tab-content">
                    <div id="TTTK" class="container tab-pane active">
                        <h3 class="heading">Thông tin tài khoản</h3>
                        <div>
                            <form>
                                <div class="form-control1">
                                    <label class="input-label">Họ tên</label>
                                    <div>
                                        <input type="text" name="fullName" maxlength="128" class="Input-sc-17i9bto-0 bYlDgr" value="Nguyễn Hoàng Long">
                                    </div>
                                </div>
                                <div class="form-control1">
                                    <label class="input-label">Số điện thoại</label>
                                    <div>
                                        <input type="tel" name="phoneNumber" placeholder="Hãy nhập SĐT" class="Input-sc-17i9bto-0 bYlDgr" value="">
                                    </div>
                                </div>
                                <div class="form-control1">
                                    <label class="input-label">Địa chỉ</label>
                                    <div>
                                        <input type="text" name="address" class="Input-sc-17i9bto-0 bYlDgr" value="">
                                    </div>
                                </div>
                                <div class="form-control1">
                                    <label class="input-label">&nbsp;</label>
                                    <button type="submit" class="btn-submit1">Cập nhật</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div id="QLDH" class="container tab-pane fade">
                        <h3>Quản lý đơn hàng</h3>
                        <div class="inner">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Mã đơn hàng</th>
                                        <th>Sản phẩm</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><a href="">662223713</a></td>
                                        <td>Mật ong gừng </td>
                                        <td>120.000 ₫</td>
                                    </tr>
                                    <tr>
                                        <td><a href="">726814593</a></td>
                                        <td>Nụ hoa tam thất</td>
                                        <td>160.000 ₫</td>
                                    </tr>
                                    <tr>
                                        <td><a href="">328255180</a></td>
                                        <td>Tinh bột nghệ</td>
                                        <td>80.000 ₫</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Kết thúc thanh điều hướng-->
    </div>

</div>
